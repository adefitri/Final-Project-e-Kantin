<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.finalproject.e_kantin.DessertFragment">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nagasari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:src="@drawable/nagasari" />

                <TextView
                    android:id="@+id/namanasgor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/putih"
                    android:text="Nagasari Bu Tini"
                    android:textColor="@color/hitam" />

                <Button
                    android:id="@+id/tbnasgor"
                    android:layout_width="@dimen/lebar_dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/putih"
                    android:background="@color/colorPrimary"
                    android:text="Pesan Sekarang" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/klepon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-120dp"
                    android:layout_marginTop="-120dp"
                    android:src="@drawable/klepon" />

                <TextView
                    android:id="@+id/namaklepon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/putih"
                    android:text="Klepon"
                    android:textColor="@color/hitam" />

                <Button
                    android:id="@+id/tbklepon"
                    android:layout_width="@dimen/lebar_dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/putih"
                    android:background="@color/colorPrimary"
                    android:text="Pesan Sekarang" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/eskrim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/eskrim" />

                <TextView
                    android:id="@+id/namaeskrim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/putih"
                    android:text="Es Krim"
                    android:textColor="@color/hitam" />

                <Button
                    android:id="@+id/tbeskrim"
                    android:layout_width="@dimen/lebar_dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/putih"
                    android:background="@color/colorPrimary"
                    android:text="Pesan Sekarang" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pudding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-120dp"
                    android:layout_marginTop="-100dp"
                    android:src="@drawable/pudding" />

                <TextView
                    android:id="@+id/namapudding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/putih"
                    android:text="Pudding Coklat"
                    android:textColor="@color/hitam" />

                <Button
                    android:id="@+id/tbgado"
                    android:layout_width="@dimen/lebar_dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/putih"
                    android:background="@color/colorPrimary"
                    android:text="Pesan Sekarang" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
