<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.finalproject.e_kantin.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:id="@+id/linear"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/makanan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tinggi"
            android:gravity="center"
            android:textColor="@color/putih"
            android:layout_marginLeft="@dimen/batas_samping"
            android:text="MAKANAN"
            android:onClick="fmakanan"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tinggi"
            android:gravity="center"
            android:textColor="@color/putih"
            android:layout_marginLeft="@dimen/batas_samping"
            android:onClick="fminuman"
            android:text="MINUMAN"
            android:id="@+id/minuman"/>
        <TextView
            android:id="@+id/menusehat"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tinggi"
            android:gravity="center"
            android:textColor="@color/putih"
            android:layout_marginLeft="@dimen/batas_samping"
            android:text="MENU SEHAT"
            android:onClick="fsehat"/>

        <TextView
            android:id="@+id/dessert"
            android:layout_width="111dp"
            android:layout_height="@dimen/tinggi"
            android:gravity="center"
            android:onClick="fdessert"
            android:text="DESSERT"
            android:textColor="@color/putih" />

    </LinearLayout>

<FrameLayout
    android:id="@+id/tampilmenu"
    android:layout_below="@+id/linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

</FrameLayout>
</RelativeLayout>
